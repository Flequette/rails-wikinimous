<p><%= link_to "New article", new_article_path(@article) %></p>

<% @articles.each do |article| %>
  <h3><%= article.title %></h3>
  <p><%= article.content %></p>
  <%= link_to "Detail", article_path(article) %>
  <%= link_to "Edit", edit_article_path(article) %>
  <%= link_to "Delete", article_path(article),
      method: :delete,
      data: { confirm: "Are you sure?" }  %>
<% end %>


